<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" nodeOrientation="RIGHT_TO_LEFT" prefHeight="500.0" prefWidth="450.0"
            xmlns="http://javafx.com/javafx/8" fx:controller="fbrs.controller.SpecialCasesController">
    <top>
        <Label text="حالات خاصة للبُكس" BorderPane.alignment="CENTER">
            <font>
                <Font size="28.0"/>
            </font>
            <BorderPane.margin>
                <Insets bottom="30.0" top="30.0"/>
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <GridPane prefHeight="132.0" prefWidth="350.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <VBox.margin>
                    <Insets left="50.0" right="50.0" top="80.0"/>
                </VBox.margin>
                <Label text="العدد">
                    <font>
                        <Font name="Times New Roman" size="18.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="30.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="نوع الحالة" GridPane.rowIndex="1">
                    <font>
                        <Font name="Times New Roman" size="18.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="30.0"/>
                    </GridPane.margin>
                </Label>
                <TextField fx:id="buksaCount" promptText="أدخل عدد البُكس" GridPane.columnIndex="1">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </TextField>
                <ComboBox fx:id="specialCases" prefHeight="25.0" prefWidth="183.0" promptText="اختر نوع الحالة"
                          GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </GridPane>
        </VBox>
    </center>
    <bottom>
        <Button mnemonicParsing="false" onAction="#onClickSave" text="حفظ التعديلات" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="30.0"/>
            </BorderPane.margin>
            <font>
                <Font name="Times New Roman" size="24.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
    </bottom>
</BorderPane>
