<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" nodeOrientation="RIGHT_TO_LEFT" prefHeight="500.0" prefWidth="450.0"
            xmlns="http://javafx.com/javafx/8" fx:controller="fbrs.controller.FishermanProfileController">
    <top>
        <Label text="تعديل تفاصيل الصياد" BorderPane.alignment="CENTER">
            <font>
                <Font size="36.0"/>
            </font>
            <BorderPane.margin>
                <Insets bottom="30.0" top="30.0"/>
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <GridPane prefHeight="211.0" prefWidth="350.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <VBox.margin>
                    <Insets left="50.0" right="50.0" top="50.0"/>
                </VBox.margin>
                <TextField fx:id="id" promptText="ادخل الرقم التعريفي الجديد" text="101"
                           GridPane.columnIndex="1">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </TextField>
                <Label text="الاسم" GridPane.rowIndex="1">
                    <font>
                        <Font name="Times New Roman" size="18.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="30.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="رقم الجوال" GridPane.rowIndex="2">
                    <font>
                        <Font name="Times New Roman" size="18.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="30.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="رصيد الصياد" GridPane.rowIndex="3">
                    <font>
                        <Font name="Times New Roman" size="18.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="30.0"/>
                    </GridPane.margin>
                </Label>
                <TextField fx:id="name" promptText="ادخل الاسم الجديد" text="خليل شاهين"
                           GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </TextField>
                <TextField fx:id="phone" promptText="ادخل رقم الجوال الجديد" text="0592662534"
                           GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </TextField>
                <Label text="الرقم التعريفي">
                    <font>
                        <Font name="Times New Roman" size="18.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="30.0"/>
                    </GridPane.margin>
                </Label>
                <HBox prefHeight="22.0" prefWidth="175.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <GridPane.margin>
                        <Insets bottom="10.0" top="10.0"/>
                    </GridPane.margin>
                    <TextField fx:id="buksa" prefHeight="30.0" prefWidth="112.0"
                               promptText="ادخل عدد البوكس" text="50000">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </TextField>
                    <Label text="بكسة">
                        <font>
                            <Font name="Times New Roman" size="18.0"/>
                        </font>
                        <HBox.margin>
                            <Insets left="20.0" top="5.0"/>
                        </HBox.margin>
                    </Label>
                </HBox>
            </GridPane>
        </VBox>
    </center>
    <bottom>
        <HBox prefHeight="72.0" prefWidth="450.0" BorderPane.alignment="CENTER">
            <Button mnemonicParsing="false" onAction="#onClickSave" text="حفظ التعديلات">
                <font>
                    <Font name="Times New Roman" size="18.0"/>
                </font>
                <HBox.margin>
                    <Insets left="70.0" right="50.0"/>
                </HBox.margin>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
            <Button mnemonicParsing="false" onAction="#onClickDeposit" text="إضافة لرصيد الصياد من المخزن">
                <font>
                    <Font name="Times New Roman" size="18.0"/>
                </font>
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
        </HBox>
    </bottom>
</BorderPane>
