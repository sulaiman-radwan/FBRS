<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" nodeOrientation="RIGHT_TO_LEFT" prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/8" fx:controller="fbrs.controller.RecycleBinController">
    <center>
        <VBox spacing="16.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
            <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="selectColumn" prefWidth="50.0" sortable="false"/>
                    <TableColumn fx:id="idColumn" prefWidth="88.0" sortable="false" text="رفم التاجر"/>
                    <TableColumn fx:id="nameColumn" prefWidth="213.0" sortable="false" text="اسم التاجر"/>
                    <TableColumn fx:id="phoneColumn" prefWidth="181.0" sortable="false" text="الجوال"/>
                    <TableColumn fx:id="balanceColumn" prefWidth="86.0" sortable="false" text="الرصيد"/>
                </columns>
            </TableView>
        </VBox>
    </center>
    <left>
        <VBox alignment="TOP_CENTER" spacing="8.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="16.0" left="16.0" right="16.0"/>
            </padding>
            <BorderPane.margin>
                <Insets top="8.0"/>
            </BorderPane.margin>
            <TextField fx:id="searchField" promptText=" بحث">
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
            </TextField>
            <Button fx:id="restoreBtn" mnemonicParsing="false" onAction="#restore" prefWidth="150.0" text="إرجاع">
                <VBox.margin>
                    <Insets top="20.0"/>
                </VBox.margin>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
            <Button fx:id="FinalDeletionBtn" mnemonicParsing="false" onAction="#FinalDeletion" prefWidth="150.0"
                    text="حذف نهائي">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
                <VBox.margin>
                    <Insets top="20.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="EmptyRecycleBinBtn" layoutX="26.0" layoutY="155.0" mnemonicParsing="false"
                    onAction="#EmptyRecycleBin" prefHeight="25.0" prefWidth="150.0" text="إفارغ سلة المحذوفات">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
                <VBox.margin>
                    <Insets top="20.0"/>
                </VBox.margin>
            </Button>
        </VBox>
    </left>
    <top>
        <HBox prefHeight="66.0" prefWidth="800.0" BorderPane.alignment="CENTER">
            <Button alignment="TOP_CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#back"
                    text="رجوع">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
                <HBox.margin>
                    <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
                </HBox.margin>
            </Button>
            <AnchorPane prefHeight="66.0" prefWidth="640.0">
                <HBox.margin>
                    <Insets bottom="28.0"/>
                </HBox.margin>
                <Text layoutX="242.0" layoutY="43.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="سلة المحذوفات">
                    <font>
                        <Font size="36.0"/>
                    </font>
                </Text>
            </AnchorPane>
        </HBox>
    </top>
</BorderPane>
